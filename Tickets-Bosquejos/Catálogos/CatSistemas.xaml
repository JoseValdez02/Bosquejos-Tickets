<UserControl x:Class="Tickets_Bosquejos.Catálogos.CatSistemas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tickets_Bosquejos.Catálogos"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="tableSistemas" VerticalAlignment="Stretch" AutoGenerateColumns="False" Height="600" Width="1050" FontSize="18"
IsReadOnly="True" ScrollViewer.CanContentScroll="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding sis_clave}"></DataGridTextColumn>
                <DataGridTextColumn Header="Nombre del Sistema" Binding="{Binding sis_nombre}"></DataGridTextColumn>
                <DataGridTextColumn Header="Lenguaje de Programación" Binding="{Binding sis_lenguaje}"></DataGridTextColumn>
                <DataGridTextColumn Header="Plataforma" Binding="{Binding sis_plataforma}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
